<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mandipsilwal.customerapplication.Login"
        android:background="@android:color/holo_green_dark">


    <Button
        android:background="@drawable/googlebutton"
        android:id="@+id/google"
        android:layout_height="50dp"
        android:layout_width="320dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignStart="@+id/facebook"
        android:layout_alignRight="@+id/facebook"
        android:layout_alignEnd="@+id/facebook" />

    <Button
        android:layout_width="380dp"
        android:layout_height="54dp"
        android:id="@+id/facebook"
        android:background="@drawable/facebook"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/google"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Login"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/login" />

    <Button
        android:text="Signup"
        android:layout_width="390dp"
        android:layout_height="65dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:id="@+id/signUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_alignBaseline="@+id/userName"
        android:layout_alignBottom="@+id/userName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userName"
        android:hint="User Name"
        android:layout_marginBottom="51dp"
        android:textAlignment="center"
        android:layout_above="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Skip"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:layout_marginBottom="88dp"
        android:id="@+id/skip"
        android:layout_width="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignStart="@+id/facebook" />

</RelativeLayout>
