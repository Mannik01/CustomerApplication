<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_appointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mandipsilwal.customerapplication.MyAppointment"
    android:background="@color/colorPrimary">

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ic_launcher"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/getAddress"
        android:layout_height="80dp"
        android:layout_width="200dp"
        android:layout_below="@+id/businessName"
        android:layout_alignLeft="@+id/businessName"
        android:layout_alignStart="@+id/businessName" />

    <TextView
        android:id="@+id/businessName"
        android:layout_height="80dp"
        android:layout_width="200dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="39dp" />

    <TextView
        android:text="Employee Name:"
        android:layout_width="200dp"
        android:id="@+id/textView5"
        android:layout_height="80dp"
        android:textStyle="normal|bold"
        android:textSize="@dimen/textsize_myappt"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Scheduled Time:"
        android:layout_width="200dp"
        android:id="@+id/textView4"
        android:layout_height="80dp"
        android:textStyle="normal|bold"
        android:textSize="@dimen/textsize_myappt"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/getTime"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/getEmpName"
        android:layout_alignStart="@+id/getEmpName" />

    <TextView
        android:id="@+id/getEmpName"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/getTime"
        android:layout_alignLeft="@+id/getAddress"
        android:layout_alignStart="@+id/getAddress" />

    <Button
        android:text="Cancel"
        android:background="@drawable/buttonshape"
        android:textSize="@dimen/textsize_myappt"
        android:layout_height="60dp"
        android:id="@+id/cancelAppt"
        android:layout_marginTop="93dp"
        android:layout_width="250dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
